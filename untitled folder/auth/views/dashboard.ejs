<div class="card mt-5">
  <div class="card-header">
      <h3 class="my-3"> Welcome <%= user.username %></h3>
  </div>

<div class="card-body">
  
  <!-- Button trigger modal -->
  <div class="d-flex justify-content-end">
    <a href="/add-user" class="border-shadow">
      <span class="text-gradient">add User <i class="fas fa-user"></i></span>
  </a>
  </div>


<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
     
      </div>
      <div class="modal-body">
        
<form action="" method="">
  <div class="mb-3">
      <label class="form-label" for="name">Name</label>
      <input
        type="name"
        name="name"
        placeholder="Enter Name"
        value="<%= typeof username != 'undefined' ? name : '' %>"
        class="form-control"
      />
    
  </div>
  <div class="mb-3">
      <label class="form-label" for="email">Email</label>
      <input
        type="email"
        name="email"
        placeholder="Enter Email"
        value="<%= typeof email != 'undefined' ? email : '' %>"
        class="form-control"
      />
    </div>
    <div  class="mb-3">
      <label class="form-label" for="password">Password</label>
      <input
        type="text"
        name="password"
        placeholder="Create Password"
        value="<%= typeof password != 'undefined' ? password : '' %>"
        class="form-control"
      />
    </div>
    <button type="submit" class="btn btn-primary btn-block" data-bs-dismiss="modal">
      Add User
    </button>
  </form>
      </div>
    </div>
  </div>
</div>

<form action="/" method="POST">
  <table class="table">
      <thead class="thead-dark">
          <tr>
              <th>ID</th>
              <th>Name</th>
              <th>@Email</th>
              <th>Password</th>
              <th>Action</th>
          </tr>
      </thead>
      <tbody>
        <% for(var i = 0; i < user.length; i++) { %>
          <tr>
              <td><%= i + 1 %></td>
              <td><%= user[i].username %></td>
              <td><%= user[i].email %></td>
              <td><%= user[i].password %></td>
            
          </tr>
          <% } %>
      </tbody>
  </table>
</form>

<a class="btn btn-danger" href="users/logout">logout</a>
</div>
</div>